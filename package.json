{
  "name": "fe-standard-config-seed",
  "version": "0.0.1",
  "displayName": "fe-standard-config-seed",
  "description": "a seed with fe standard config",
  "main": "dist/src/index.js",
  "publisher": "fengyinchao",
  "engines": {
    "vscode": "^1.64.0",
    "node": "16.x"
  },
  "icon": "dist/fast.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "Generate.component.h5.ts",
        "title": "生成H5组件模版-TS"
      },
      {
        "command": "fed-tools.showFedStandardConfigPanel",
        "category": "showFedStandardConfigPanel",
        "title": "showFedStandardConfigPanel"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "Generate.component.h5.ts",
          "when": "explorerResourceIsFolder",
          "group": "EditorConfig@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "douyu-fed",
          "title": "斗鱼FED",
          "icon": "./dist/fast.png"
        }
      ]
    },
    "views": {
      "douyu-fed": [
        {
          "type": "webview",
          "id": "douyu-fed-codegen",
          "name": "项目生成器"
        }
      ]
    }
  },
  "scripts": {
    "preinstall": "only-allow yarn",
    "start": "ts-node src/index.ts",
    "build": "tsc -p tsconfig.app.json && cp  src/*.png dist && cp -r src/gen-project/pages dist/src/gen-project",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "tslib": "2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "12.12.62",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "4.4.0",
    "@types/vscode": "^1.64.0",
    "commitizen": "4.2.1",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "cz-customizable": "6.3.0",
    "eslint": "7.10.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "only-allow": "1.1.1",
    "prettier": "2.1.2",
    "ts-node": "10.9.1",
    "typescript": "4.0.3",
    "wait-on": "5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengyinchao/fe-standard-config-seed.git"
  },
  "keywords": [
    "standard",
    "typescript",
    "eslint",
    "styleint",
    "prettier",
    "editorconfig"
  ],
  "author": "fengyinchao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fengyinchao/fe-standard-config-seed/issues"
  },
  "homepage": "https://github.com/fengyinchao/fe-standard-config-seed#readme"
}
