{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "paths": {
      "common/*": ["src/common/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/test/**/*", "**/jest-*.ts"]
}
